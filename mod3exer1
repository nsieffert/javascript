// Problem 7:
// Write a JavaScript function that iterates the integers from 1 to 100. For multiples of 3 print "TEK" 
instead of the number and for multiples of 5, print "camp." 
For numbers that are multiples of both 3 and 5, print "TEKcamp."

//your code...

function tekCamp() {
        for (let i = 0; i <= 100; i++) {
            if ((i % 3 === 0) && (i % 5 === 0)) {
                console.log('TEKcamp ' + i);
            }

            else if (i % 3 === 0) {
                console.log('TEK ' + i);
            }

            else if (i % 5 === 0) {
                console.log('camp ' + i);
            }
            else {
                console.log(i);
            }
        }
    }

    tekCamp();




